{
  "compilerOptions": {
    "lib": ["esnext"],
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "test_setup.ts"],
  "exclude": ["node_modules/**/*"]
}
